
# Container: /
ad.top_level_leaf = 'root value'
# Top node: /
ad = root()

# Container: /c1
ad.c1.optional_leaf = 42

# P-container: /c1/c2
c2 = ad.c1.create_c2('required value')

# Container: /c1/c2
c2.l1 = 'inner value'

# List /c1/li1 element: item1
li1_element = ad.c1.li1.create('item1')
li1_element.value = 100

# List /c1/li1 element: item2
li1_element = ad.c1.li1.create('item2')
li1_element.value = 200

# Container: /c1/li1[name=Leaf('string', 'item2')]/c3
li1_element.c3.nested_leaf = 'birb'